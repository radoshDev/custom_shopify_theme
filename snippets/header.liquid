<header>
  <nav>
    <h1>{{ shop.name }}</h1>
    <ul>
      {% for link in linklists.main-menu.links %}
        <li>{{ link.title | link_to: link.url }}</li>
      {% endfor %}
      {% if cart.item_count > 0 %}
        <li>{{ "cart (0)" | replace: '0', cart.item_count | link_to: "/cart" }}</li>
      {% endif %}
    </ul>
  </nav>
</header>